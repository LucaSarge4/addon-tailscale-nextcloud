#!/command/with-contenv bashio
# shellcheck shell=bash
# ==============================================================================
# Home Assistant Community Add-on: Tailscale
# Enables Tailscale Proxy and Funnel feature
# ==============================================================================

declare wait_counter=0
declare curl_result
declare tailscale_command
declare nextcloud_port

nextcloud_port=$(bashio::config 'nextcloud_port')

# Check if Tailscale HTTPS is enabled
if ! /opt/tailscale status --self=true --peers=false --json \
  | jq -rce '.Self.CapMap | has("https")' > /dev/null;
then
  bashio::log.error "Tailscale's HTTPS support is disabled"
  bashio::exit.nok
fi

# Wait a bit for Nextcloud to be available during startup
while (( 200 != (curl_result=$(curl -s -o /dev/null -w "%{http_code}" "http://127.0.0.1:${nextcloud_port}")) )); do
  if (( wait_counter++ == 18 )); then
    break
  fi
  bashio::log.info "Waiting for Nextcloud to be ready..."
  sleep 5
done
if (( wait_counter != 0 && curl_result == 200)); then
  bashio::log.info "Nextcloud is ready"
fi

if (( 200 != curl_result )); then
  # Warn that we can't test Nextcloud's HTTP reverse proxy configuration
  bashio::log.warning "Nextcloud is not accessible currently, unable to test the connection to Nextcloud as reverse proxy"
else
  # Test Nextcloud's HTTP reverse proxy configuration
  if (( 200 != $(curl -s -o /dev/null -w "%{http_code}" "http://127.0.0.1:${nextcloud_port}" -H "X-Forwarded-For: 127.0.0.1") )); then
    bashio::log.error "Unable to connect to Nextcloud as reverse proxy"
    bashio::log.error "Please check your configuration based on the add-on's documentation under \"Option: proxy\""
    bashio::exit.nok
  fi
fi

if ! bashio::config.true 'funnel'; then
  tailscale_command=serve
else
  # Check if Funnel is available
  if ! /opt/tailscale status --self=true --peers=false --json \
    | jq -rce '.Self.CapMap | has("funnel")' > /dev/null;
  then
    bashio::log.error "Tailscale's Funnel support is disabled"
    bashio::exit.nok
  fi
  tailscale_command=funnel
fi

# Set up serve
exec /opt/tailscale ${tailscale_command} --https=$(bashio::config "proxy_and_funnel_port" "443") --set-path=/ "http://127.0.0.1:${nextcloud_port}"
